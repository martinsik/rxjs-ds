{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist/package",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "ES6",
      "DOM"
    ]
  },
  "include": [
    "dist/package/src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
